#:kivy 1.10.0

<AppScreenManager>:
	Menu:

<Menu>:
	view: view
	name_text_input: name


	BoxLayout:
		orientation: 'vertical'

		BoxLayout:
			size_hint_y: None
			height: "40dp"
	 
			Label:
				text: "Name"
			TextInput:
				id: name

		BoxLayout:
			size_hint_y: None
			height: "40dp"

			Button:
				text: "Submit"
				size_hint_x: 15
				color: (1, 1, 1, 1)
				background_color: (.3, .3, .3, 1)
				on_release: root.submit_student()

			Button:
				text: "Delete"
				color: (1, 1, 1, 1)
				size_hint_x: 15
				background_color: (.3, .3, .3, 1)
			Button:
				text: "Replace"
				color: (1, 1, 1, 1)
				size_hint_x: 15
				background_color: (.3, .3, .3, 1)
			Button:
				text: "Load From File"
				color: (1, 1, 1, 1)
				size_hint_x: 15
				background_color: (.3, .3, .3, 1)


		ScrollView:
			id: view